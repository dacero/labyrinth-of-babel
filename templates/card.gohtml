<!DOCTYPE html>
<html>
	<head>
		<title>deliris</title>
		<meta name="author" content="da0">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="http://deliris.net/thoughts/labyrinth/style.css" type="text/css">
	</head>
	
	<body>
		<header>
			<h1>Skectch of an Idea Card</h1>
		</header>

		<main>
			<!--here's where the card actually goes-->
			<article class="card">
				<div class="card-header">
					<div class="card-room">{{.Room}}</div>
					<div class="card-title">{{.Title}}</div><!--title-->
					<div class="card-date">{{.Create_time.Format "02 Jan 2006"}}</div>
				</div>
				<div class="card-body">
					{{.Body}}
				</div>
				<div class="card-sources">
					<ul class="card-source-list">Sources
						{{range .Sources}}
						<li class="card-source">{{.Source}}</li>
						{{end}}
					</ul>
				</div>
			</article>
			
			<footer class="card-links">
				<h1>Labyrinth Links</h1>
				<ul class="card-link-list">
					{{range .Links}}
					<li class="card-link"><a href="/cell/{{.Id}}">{{.Text}}</a></li>
					{{end}}
				</ul> <!--links-->
			</footer>
		</main>

		<footer>
			<a href="/cell/{{.Id}}/edit">Edit</a>
			<a href="/page/new_card.html">New</a>
		</footer>
	</body>
</html>
